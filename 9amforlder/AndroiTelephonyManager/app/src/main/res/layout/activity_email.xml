<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".EmailActivity">
    <EditText
        android:id="@+id/receiver_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:hint="Enter receiver email"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Subject"
        android:layout_alignLeft="@+id/receiver_email"
        android:layout_below="@+id/receiver_email"
        android:layout_marginTop="18dp"
        >


    </EditText>

    <EditText
        android:id="@+id/email_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_subject"
        android:layout_below="@+id/email_subject"
        android:layout_marginTop="28dp"
        android:hint="Enter your message"
        android:inputType="textMultiLine" />






    <Button
        android:id="@+id/send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_body"
        android:layout_below="@+id/email_body"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="20dp"
        android:text="Send Email" />
</RelativeLayout>