<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/naturetwo"
    android:scaleType="fitXY"
    android:layout_gravity="center_horizontal"
    android:id="@+id/rotateimage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="applyanim"
        android:id="@+id/animationbtn"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textviewsequestion"
    android:text="Sequestional Effect"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequesn"
        android:id="@+id/sequensbtn"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>

</LinearLayout>