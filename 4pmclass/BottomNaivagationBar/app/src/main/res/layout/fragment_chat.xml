<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Chat">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   android:layout_centerHorizontal="true"
        android:id="@+id/textview"
        android:layout_margin="20dp"
        android:textColor="#F30E0E"
        android:text="Caculate Bill" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:text="Laptop"
        android:id="@+id/laptop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/laptop"
        android:text="Moblie"
        android:id="@+id/mobile"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:text="Bike"
        android:id="@+id/bike"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculatebill"
        android:text="CalculateBill"
        android:layout_below="@+id/bike"/>
</RelativeLayout>